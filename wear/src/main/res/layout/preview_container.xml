<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imgTakePicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/prbLoading"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlControl">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnSwitchCamera"
            android:background="@drawable/front_camera_icon"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/btnTakePicture"
            android:background="@drawable/take_picture_icon"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:id="@+id/btnTimer"
            android:text="Timer"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/timer_icon"/>
    </RelativeLayout>

    <com.skyfishjy.library.RippleBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rippleBg"
        app:rb_color="@color/greenefy"
        app:rb_radius="32dp"
        app:rb_duration="3000"
        app:rb_scale="6"
        app:rb_rippleAmount="4">
    </com.skyfishjy.library.RippleBackground>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnCounter"
        android:visibility="gone"
        android:textSize="100sp"
        android:background="@android:color/transparent"
        />

</RelativeLayout>